<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_business_area">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="В какой сфере ты
            хочешь создать
            свой бизнес?"
            android:gravity="center"
            android:fontFamily="@font/montserrat_extra_bold"
            android:textColor="@color/main"
            android:textSize="28dp"
            android:padding="20dp">
        </TextView>
        <!--cardPreventCornerOverlap="true"-предотвращает пересечение между содержимым и закругленными углами-->
        <androidx.cardview.widget.CardView
            android:id="@+id/carCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:minHeight="55dp"
                android:background="@color/main">
                <TextView
                    style="@style/textCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Автобизнес"></TextView>
                <ImageView
                    style="@style/imageCardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/car"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/restaurantCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:minHeight="55dp"
                android:background="@color/main">

                <TextView
                    style="@style/textCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ресторанный бизнес"></TextView>

                <ImageView
                    style="@style/imageCardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/restaurant"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/coffeeCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:minHeight="55dp"
                android:background="@color/main">
                <TextView
                    style="@style/textCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Кофейня"></TextView>
                <ImageView
                    style="@style/imageCardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/storefront"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/onlineShopCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:minHeight="55dp"
                android:background="@color/main">
                <TextView
                    style="@style/textCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Онлайн магазин"></TextView>
                <ImageView
                    style="@style/imageCardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pricetags_sharp"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/franchiseCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:minHeight="55dp"
                android:background="@color/main">

                <TextView
                    style="@style/textCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Кофейня"></TextView>
                <ImageView
                    style="@style/imageCardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/points"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/readyBusinessCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:minHeight="55dp"
                android:background="@color/main">

                <TextView
                    style="@style/textCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="У меня уже есть бизнес"></TextView>
                <ImageView
                    style="@style/imageCardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/storefront"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>